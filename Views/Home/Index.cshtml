@model IEnumerable<crud_operation.Models.RmpiStuInfoModel>

@{
    ViewData["Title"] = "Index";
}

<main>
    <div class="container-fluid px-4">
        <br />
        <div class="col-3">
            <h3 class="text-primary">Members</h3>
        </div>
        <p>
            <a type="button" class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StuName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StuRoll)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StuReg)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StuDept)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StuEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StuPhoto)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StuName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StuRoll)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StuReg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StuDept)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StuEmail)
                        </td>
                        <td>
                            <img src="@("/studentimg/"+item.StuPhoto)" asp-append-version="true" style="width:100px; height:100px" />
                        </td>
                        <td>
                            <a type="button" class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.StuID">Update</a>
                        </td>
                        <td>|</td>
                        <td>
                            <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.StuID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
